{
  "include": ["src", "index.js"],
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
